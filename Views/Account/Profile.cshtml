@model WebBanPhanMem.ViewModels.UserProfileVM
@{
    ViewData["Title"] = "Thông tin tài khoản";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <h2 class="mb-4">👤 @ViewData["Title"]</h2>
        <hr />

        @* Hiển thị thông báo thành công sau khi cập nhật *@
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success" role="alert">
                <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
            </div>
        }

        <form asp-action="Profile" method="post" class="needs-validation" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @* Trường Email (Chỉ hiển thị, không cho phép sửa, dùng Email làm UserName) *@
            <div class="mb-3">
                <label asp-for="Email" class="form-label fw-bold"></label>
                <input asp-for="Email" class="form-control" disabled />
            </div>

            @* Trường Họ và Tên (Cho phép sửa) *@
            <div class="mb-3">
                <label asp-for="FullName" class="form-label fw-bold"></label>
                <input asp-for="FullName" class="form-control" required />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary mt-3"><i class="fas fa-save"></i> Lưu thông tin</button>

            <a asp-action="ChangePassword" class="btn btn-warning mt-3 float-end">
                <i class="fas fa-key"></i> Đổi mật khẩu
            </a>

            <a asp-controller="Orders" asp-action="History" class="btn btn-secondary mt-3 me-2 float-end">
                <i class="fas fa-box"></i> Xem lịch sử mua hàng
            </a>

        </form>
    </div>
</div>

@section Scripts {
    @{
        // Đảm bảo partial view này tồn tại trong Views/Shared/_ValidationScriptsPartial.cshtml
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}