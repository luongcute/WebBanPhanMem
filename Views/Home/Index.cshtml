<div class="container d-flex justify-content-center">
    <div class="row justify-content-center">
        @foreach (var item in Model)
        {
            <div class="col-md-3 mb-3">
                <div class="card h-100 shadow-sm border-0">
                    <img src="@item.ImageUrl" class="card-img-top" alt="@item.Name" style="object-fit: cover; height: 200px;" />
                    <div class="card-body text-center">
                        <h5 class="card-title text-truncate" title="@item.Name">@item.Name</h5>
                        <p class="card-text text-danger fw-bold">@item.Price.ToString("N0") ₫</p>
                        <a asp-controller="Products"
                           asp-action="Details"
                           asp-route-id="@item.Id"
                           class="btn btn-primary btn-sm">Xem chi tiết</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
