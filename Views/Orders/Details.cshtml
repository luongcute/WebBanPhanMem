@model WebBanPhanMem.ViewModels.OrderHistoryVM

@{
    ViewData["Title"] = "Chi tiết đơn hàng #" + Model.Id;
}

<div class="container py-4">
    <h3>Chi tiết đơn hàng #@Model.Id</h3>

    <div class="row">
        <!-- Danh sách sản phẩm -->
        <div class="col-lg-8">
            <div class="card">
                <div class="card-body">
                    <table class="table table-bordered table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Sản phẩm</th>
                                <th class="text-center">SL</th>
                                <th class="text-end">Giá</th>
                                <th class="text-end">Tổng</th>
                                <th>License</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Items)
                            {
                                <tr>
                                    <td>@item.ProductName</td>
                                    <td class="text-center">@item.Quantity</td>
                                    <td class="text-end">@item.Price:N0 ₫</td>
                                    <td class="text-end">@item.Total:N0 ₫</td>
                                    <td>
                                        @if (item.HasLicense)
                                        {
                                            <code class="bg-light px-2">@item.LicenseKey</code>
                                            <a asp-action="DownloadLicense"
                                               asp-route-orderItemId="@item.Id"
                                               class="btn btn-sm btn-success ms-2">
                                                Tải
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Chưa cấp</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th colspan="3" class="text-end">Tổng cộng:</th>
                                <th class="text-end">@Model.TotalAmount:N0 ₫</th>
                                <th></th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>

        <!-- Thông tin đơn hàng -->
        <div class="col-lg-4">
            <div class="card">
                <div class="card-header">Thông tin đơn hàng</div>
                <div class="card-body">
                    <p><strong>Ngày đặt:</strong> @Model.CreatedAt:dd/MM/yyyy HH:mm</p>
                    <p><strong>Trạng thái:</strong> <span class="badge @Model.StatusBadgeClass">@Model.Status</span></p>
                    <p><strong>Thanh toán:</strong> <span class="badge @Model.PaymentBadgeClass">@Model.PaymentStatus</span></p>
                </div>
            </div>

            <!-- Nút hủy đơn nếu Pending -->
            @if (Model.Status == "Pending")
            {
                <form asp-action="Cancel" method="post" class="mt-3">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" value="@Model.Id" />
                    <button type="submit" class="btn btn-danger w-100"
                            onclick="return confirm('Bạn có chắc muốn hủy đơn hàng này?')">
                        Hủy đơn hàng
                    </button>
                </form>
            }

            <a asp-action="History" class="btn btn-outline-secondary w-100 mt-2">Quay lại lịch sử đơn hàng</a>
        </div>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success mt-3">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger mt-3">@TempData["ErrorMessage"]</div>
}
