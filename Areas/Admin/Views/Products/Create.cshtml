@model WebBanPhanMem.Areas.Admin.Models.ProductAdminViewModel

@{
    ViewData["Title"] = "Thêm sản phẩm mới";
}

<div class="container mt-4">
    <h2 class="mb-4 text-success fw-bold">
        <i class="bi bi-plus-circle"></i> Thêm sản phẩm mới
    </h2>

    <form asp-action="Create" enctype="multipart/form-data" method="post" class="shadow-sm p-4 bg-white rounded">
        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="Name" class="form-label fw-bold"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="Price" class="form-label fw-bold"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label fw-bold"></label>
            <textarea asp-for="Description" rows="3" class="form-control"></textarea>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="CategoryId" class="form-label fw-bold"></label>
                <select asp-for="CategoryId" class="form-select"
                        asp-items="@(new SelectList(ViewBag.Categories, "Id", "Name"))">
                    <option value="">-- Chọn danh mục --</option>
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="ImageFile" class="form-label fw-bold"></label>
                <input asp-for="ImageFile" type="file" class="form-control" accept="image/*" />
            </div>
        </div>

        <div class="text-end">
            <a asp-action="Index" class="btn btn-secondary me-2">Quay lại</a>
            <button type="submit" class="btn btn-success">Lưu</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
