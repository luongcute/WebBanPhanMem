@model IEnumerable<WebBanPhanMem.Areas.Admin.Models.CategoryAdminViewModel>

@{
    ViewData["Title"] = "Danh sách danh mục";
}

<div class="container mt-4">
    <h2 class="mb-4 text-primary fw-bold">
        <i class="bi bi-list-ul"></i> Danh sách danh mục
    </h2>

    <a asp-area="Admin" asp-controller="Categories" asp-action="Create" class="btn btn-success mb-3">
        <i class="bi bi-plus-circle"></i> Thêm danh mục mới
    </a>

    <form method="post" asp-antiforgery="true"></form> <!-- Token để dùng khi xóa -->

    <table class="table table-striped table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Tên danh mục</th>
                <th>Số lượng sản phẩm</th>
                <th class="text-center" style="width:150px;">Hành động</th>
            </tr>
        </thead>
        <tbody>
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="4" class="text-center text-muted">Chưa có danh mục nào</td>
                </tr>
            }
            else
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.ProductCount</td>
                        <td class="text-center">
                            <a asp-area="Admin" asp-controller="Categories" asp-action="Edit" asp-route-id="@item.Id"
                               class="btn btn-sm btn-primary me-1" title="Sửa">
                                <i class="bi bi-pencil-square"></i>
                            </a>

                            <a href="javascript:void(0);"
                               class="btn btn-sm btn-danger btn-delete"
                               data-id="@item.Id"
                               data-name="@item.Name"
                               title="Xóa">
                                <i class="bi bi-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>

    @section Scripts {
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

        <script>
            $(document).ready(function () {
                $(".btn-delete").click(function () {
                    const id = $(this).data("id");
                    const name = $(this).data("name");

                    Swal.fire({
                        title: "Xác nhận xóa?",
                        text: "Bạn có chắc chắn muốn xóa danh mục \"" + name + "\" không?",
                        icon: "warning",
                        showCancelButton: true,
                        confirmButtonColor: "#d33",
                        cancelButtonColor: "#3085d6",
                        confirmButtonText: "Xóa",
                        cancelButtonText: "Hủy"
                    }).then((result) => {
                        if (result.isConfirmed) {
                            $.ajax({
                                url: "/Admin/Categories/DeleteConfirmed/" + id,
                                type: "POST",
                                data: {
                                    "__RequestVerificationToken": $('input[name="__RequestVerificationToken"]').val()
                                },
                                success: function () {
                                    Swal.fire({
                                        title: "Đã xóa!",
                                        text: "Danh mục \"" + name + "\" đã được xóa thành công.",
                                        icon: "success",
                                        timer: 1500,
                                        showConfirmButton: false
                                    });
                                    $("a.btn-delete[data-id='" + id + "']").closest("tr").fadeOut();
                                },
                                error: function () {
                                    Swal.fire("Lỗi!", "Không thể xóa danh mục.", "error");
                                }
                            });
                        }
                    });
                });
            });
        </script>
    }
</div>
