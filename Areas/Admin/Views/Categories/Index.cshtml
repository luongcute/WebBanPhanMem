@model IEnumerable<WebBanPhanMem.Areas.Admin.Models.CategoryAdminViewModel>

@{
    ViewData["Title"] = "Danh sách danh mục";
}

<div class="container mt-4">
    <h2 class="mb-4 text-primary fw-bold">
        <i class="bi bi-list-ul"></i> Danh sách danh mục
    </h2>

    <a asp-area="Admin" asp-controller="Categories" asp-action="Create" class="btn btn-success mb-3">
        <i class="bi bi-plus-circle"></i> Thêm danh mục mới
    </a>

    <table class="table table-striped table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Tên danh mục</th>
                <th>Số lượng sản phẩm</th>
                <th class="text-center" style="width:150px;">Hành động</th>
            </tr>
        </thead>
        <tbody>
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="4" class="text-center text-muted">Chưa có danh mục nào</td>
                </tr>
            }
            else
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.ProductCount</td>
                        <td class="text-center">
                            <a asp-area="Admin" asp-controller="Categories" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary me-1" title="Sửa">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a asp-area="Admin" asp-controller="Categories" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Xóa">
                                <i class="bi bi-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
