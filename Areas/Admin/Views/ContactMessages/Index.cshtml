@model IEnumerable<WebBanPhanMem.Models.ContactMessage>

@{
    ViewData["Title"] = "Quản lý Liên hệ";
}

<h1>Quản lý Yêu cầu Liên hệ</h1>

<p class="text-muted">Tổng số: @Model.Count() tin nhắn</p>

<table class="table table-striped table-hover mt-4">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.SentDate)</th>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Email)</th>
            <th>@Html.DisplayNameFor(model => model.Subject)</th>
            <th>@Html.DisplayNameFor(model => model.IsRead)</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="@(item.IsRead ? "table-light" : "table-warning fw-bold")">
                <td>
                    @Html.DisplayFor(modelItem => item.SentDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Subject)
                </td>
                <td>
                    @(item.IsRead ? "Đã đọc" : "Chưa đọc")
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white">Xem</a>
                    @* Bạn có thể thêm nút Xóa tại đây *@
                </td>
            </tr>
        }
    </tbody>
</table>