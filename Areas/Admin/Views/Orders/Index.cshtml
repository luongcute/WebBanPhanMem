@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Antiforgery

@model WebBanPhanMem.Areas.Admin.Controllers.OrdersIndexViewModel
@using System.Globalization

@{
    ViewData["Title"] = "Quản lý Đơn hàng";

    var statusFilter = ViewBag.CurrentStatusFilter as string;
    var paymentFilter = ViewBag.CurrentPaymentFilter as string;
    var searchString = ViewBag.CurrentSearchString as string;
}

@functions {
    public string GetStatusBadge(string status)
    {
        return status?.ToLower() switch
        {
            "pending" => "<span class=\"badge bg-warning text-dark rounded-pill\"><i class=\"bi bi-clock\"></i> Chờ xử lý</span>",
            "confirmed" => "<span class=\"badge bg-info text-white rounded-pill\"><i class=\"bi bi-check-circle\"></i> Đã xác nhận</span>",
            "shipping" => "<span class=\"badge bg-primary text-white rounded-pill\"><i class=\"bi bi-truck\"></i> Đang giao hàng</span>",
            "completed" => "<span class=\"badge bg-success text-white rounded-pill\"><i class=\"bi bi-box-seam\"></i> Hoàn thành</span>",
            "cancelled" => "<span class=\"badge bg-danger text-white rounded-pill\"><i class=\"bi bi-x-circle\"></i> Đã hủy</span>",
            _ => $"<span class=\"badge bg-secondary text-white rounded-pill\"><i class=\"bi bi-question-circle\"></i> {status}</span>",
        };
    }

    public string GetPaymentStatusBadge(string? status)
    {
        if (string.IsNullOrWhiteSpace(status))
            return "<span class=\"badge bg-secondary text-white rounded-pill\"><i class=\"bi bi-question-circle\"></i> Không rõ</span>";

        return status.ToLower() switch
        {
            "paid" => "<span class=\"badge bg-success text-white rounded-pill\"><i class=\"bi bi-credit-card-fill\"></i> Đã thanh toán</span>",
            "pending" => "<span class=\"badge bg-warning text-dark rounded-pill\"><i class=\"bi bi-clock\"></i> Chưa thanh toán</span>",
            _ => $"<span class=\"badge bg-secondary text-white rounded-pill\"><i class=\"bi bi-question-circle\"></i> {status}</span>",
        };
    }
}

<div class="container mt-4">
    <h2 class="mb-4 text-success fw-bold border-bottom pb-2">
        <i class="bi bi-bag-check-fill"></i> Quản lý Đơn hàng
    </h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-x-circle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card mb-4 shadow-sm rounded-4">
        <div class="card-header bg-white rounded-top-4">
            <h6 class="fw-bold text-success"><i class="bi bi-funnel"></i> Bộ lọc</h6>
        </div>

        <div class="card-body">
            <form action="@Url.Action("Index", "Orders")" method="get">
                @Html.AntiForgeryToken()

                <div class="row g-3">
                    <div class="col-lg-3 col-md-6">
                        <label class="form-label fw-medium">Trạng thái đơn hàng</label>
                        <select class="form-select rounded-pill" name="statusFilter">
                            <option value="">Tất cả</option>
                            <option value="pending" selected="@(statusFilter == "pending")">Chờ xử lý</option>
                            <option value="confirmed" selected="@(statusFilter == "confirmed")">Đã xác nhận</option>
                            <option value="shipping" selected="@(statusFilter == "shipping")">Đang giao hàng</option>
                            <option value="completed" selected="@(statusFilter == "completed")">Hoàn thành</option>
                            <option value="cancelled" selected="@(statusFilter == "cancelled")">Đã hủy</option>
                        </select>
                    </div>

                    <div class="col-lg-3 col-md-6">
                        <label class="form-label fw-medium">Thanh toán</label>
                        <select class="form-select rounded-pill" name="paymentFilter">
                            <option value="">Tất cả</option>
                            <option value="Pending" selected="@(paymentFilter == "Pending")">Chưa thanh toán</option>
                            <option value="Paid" selected="@(paymentFilter == "Paid")">Đã thanh toán</option>
                        </select>
                    </div>

                    <div class="col-lg-4 col-md-8">
                        <label class="form-label fw-medium">Tìm kiếm</label>
                        <input type="text" class="form-control rounded-pill"
                               name="searchString"
                               value="@searchString"
                               placeholder="Mã đơn, tên, email...">
                    </div>

                    <div class="col-lg-2 col-md-4">
                        <button class="btn btn-success w-100 rounded-pill" type="submit">
                            <i class="bi bi-search"></i> Lọc
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="card shadow-lg rounded-4 border-0">
        <div class="card-header bg-white rounded-top-4 border-bottom">
            <h5 class="fw-bold"><i class="bi bi-list-ul"></i> Danh sách Đơn hàng (@(Model?.Orders?.Count() ?? 0))</h5>
        </div>

        <div class="card-body p-0">
            <table class="table table-striped align-middle mb-0">
                <thead class="table-success text-center">
                    <tr>
                        <th class="text-start ps-3">Mã ĐH</th>
                        <th>Ngày</th>
                        <th class="text-start">Khách hàng</th>
                        <th>SL</th>
                        <th>Tổng</th>
                        <th>Thanh toán</th>
                        <th>Trạng thái</th>
                        <th style="width:220px">Thao tác</th>
                    </tr>
                </thead>

                <tbody>
                    @if (Model?.Orders?.Any() == true)
                    {
                        foreach (var item in Model.Orders)
                        {
                            var total = item.Items?.Sum(i => i.Price * i.Quantity) ?? 0;
                            var qty = item.Items?.Sum(i => i.Quantity) ?? 0;

                            <tr>
                                <td class="fw-bold text-primary ps-3">#@item.Id</td>
                                <td>@item.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>

                                <td>
                                    @if (!string.IsNullOrEmpty(item.CustomerName))
                                    {
                                        <div>@item.CustomerName</div>
                                        <small class="text-muted">@item.CustomerEmail</small>
                                    }
                                    else
                                    {
                                        <span class="text-muted fst-italic">Khách (ẩn danh)</span>
                                    }
                                </td>

                                <td class="text-center">@qty</td>

                                <td class="fw-semibold text-danger">@total.ToString("N0") ₫</td>

                                <td class="text-center">
                                    @Html.Raw(GetPaymentStatusBadge(item.PaymentStatus))
                                </td>

                                <td class="text-center">
                                    @Html.Raw(GetStatusBadge(item.Status))
                                </td>

                                <td class="text-center">
                                    <div class="d-flex justify-content-center gap-1">

                                        <a asp-action="Details"
                                           asp-route-id="@item.Id"
                                           class="btn btn-sm btn-info text-white">
                                            <i class="bi bi-eye"></i> Chi tiết
                                        </a>

                                        @if (item.PaymentStatus?.ToLower() == "pending")
                                        {
                                            <button class="btn btn-sm btn-success mark-paid-btn"
                                                    data-bs-toggle="modal"
                                                    data-bs-target="#markAsPaidConfirmationModal"
                                                    data-id="@item.Id">
                                                <i class="bi bi-credit-card"></i> Paid
                                            </button>
                                        }

                                        <a asp-action="Delete"
                                           asp-route-id="@item.Id"
                                           class="btn btn-sm btn-danger delete-btn"
                                           data-id="@item.Id">
                                            <i class="bi bi-trash"></i>
                                        </a>

                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8" class="text-center py-5 text-muted">
                                <i class="bi bi-inbox display-4 mb-3"></i><br />
                                Không có đơn nào.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- MODAL: Xác nhận đánh dấu đã thanh toán -->
<div class="modal fade" id="markAsPaidConfirmationModal" tabindex="-1">
    <div class="modal-dialog modal-sm modal-dialog-centered">
        <div class="modal-content rounded-4 shadow">
            <div class="modal-header bg-success text-white rounded-top-4">
                <h5 class="modal-title">Xác nhận thanh toán</h5>
                <button class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body text-center">
                <i class="bi bi-credit-card-fill text-success" style="font-size:3rem;"></i>
                <p class="mt-3">Đánh dấu đơn <strong id="orderIdDisplay"></strong> là ĐÃ THANH TOÁN?</p>

                <form asp-action="MarkAsPaid" method="post" id="markAsPaidForm">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" id="paidOrderIdInput" />

                    <div class="d-flex justify-content-center gap-2 mt-3">
                        <button class="btn btn-secondary rounded-pill" data-bs-dismiss="modal">Hủy</button>
                        <button class="btn btn-success rounded-pill" type="submit">Xác nhận</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {

    <script>
        document.addEventListener('DOMContentLoaded', function () {

            // Gán ID đơn vào modal Paid
            const modal = document.getElementById('markAsPaidConfirmationModal');
            modal.addEventListener('show.bs.modal', function (event) {
                const btn = event.relatedTarget;
                const id = btn.getAttribute('data-id');

                document.getElementById('orderIdDisplay').textContent = "#" + id;
                document.getElementById('paidOrderIdInput').value = id;
            });

            // Xác nhận xoá
            document.querySelectorAll('.delete-btn').forEach(btn => {
                btn.addEventListener('click', function (e) {
                    if (!confirm("Xác nhận xoá đơn #" + this.dataset.id + "?")) {
                        e.preventDefault();
                    }
                });
            });

        });
    </script>

}
