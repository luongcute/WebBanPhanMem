@model IEnumerable<WebBanPhanMem.Models.Order>

@{
    ViewData["Title"] = "Quản lý Đơn hàng";
}

<div class="container mt-4">
    <h2 class="mb-4 text-success fw-bold">
        <i class="bi bi-bag-check"></i> Quản lý Đơn hàng
    </h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    <table class="table table-bordered table-hover align-middle shadow-sm">
        <thead class="table-success text-center">
            <tr>
                <th>Mã ĐH</th>
                <th>Ngày đặt</th>
                <th>Khách hàng</th>
                <th>Số lượng SP</th>
                <th>Tổng tiền</th>
                <th style="width:150px">Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model.OrderByDescending(o => o.CreatedAt))
                {
                    // Tính tổng tiền dựa trên OrderItems
                    var totalAmount = item.Items?.Sum(i => i.Price * i.Quantity) ?? 0;

                    <tr>
                        <td class="text-center">#@item.Id</td>
                        <td>@item.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>

                        <td>@(string.IsNullOrEmpty(item.UserId) ? "Khách (Ẩn danh)" : item.UserId)</td>

                        <td class="text-center">@(item.Items?.Sum(i => i.Quantity) ?? 0)</td>
                        <td>@totalAmount.ToString("N0") ₫</td>

                        <td class="text-center">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info me-1">
                                <i class="bi bi-eye"></i> Chi tiết
                            </a>

                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger"
                               onclick="return confirm('Bạn có chắc chắn muốn xóa đơn hàng #@item.Id không?');">
                                <i class="bi bi-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-center text-muted">Chưa có đơn hàng nào.</td>
                </tr>
            }
        </tbody>
    </table>
</div>