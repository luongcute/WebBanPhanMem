@using Microsoft.AspNetCore.Identity
@using WebBanPhanMem.Models
@inject SignInManager<ApplicationUser> SignInManager

@* Areas/Admin/Views/Shared/_Layout.cshtml *@
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Admin - SoftStore</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</head>
<body>

    @* NAVBAR TRÊN CÙNG *@
    <nav class="navbar navbar-expand navbar-dark bg-primary">
        <div class="container-fluid">

            <a class="navbar-brand fw-bold" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                <i class="bi bi-speedometer2 me-2"></i> Admin SoftStore
            </a>


            <ul class="navbar-nav ms-auto">

                @if (SignInManager.IsSignedIn(User))
                {
                    <li class="nav-item">
                        <form asp-area="Admin" asp-controller="Account" asp-action="Logout"
                              method="post" class="d-inline">
                            <button type="submit" class="btn btn-warning text-dark fw-bold">
                                <i class="bi bi-box-arrow-right me-1"></i> Đăng xuất
                            </button>
                        </form>
                    </li>
                }

            </ul>

        </div>
    </nav>

    <div class="d-flex">

        @* SIDEBAR *@
        <nav id="sidebarMenu" class="sidebar bg-dark collapse d-lg-block">
            <div class="sidebar-sticky px-2 pt-3">
                <ul class="nav flex-column">

                    <li class="nav-item mb-1">
                        <a class="nav-link text-white" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                            <i class="bi bi-house-door-fill me-2"></i> Dashboard
                        </a>
                    </li>

                    <li class="nav-item mb-1">
                        <a class="nav-link text-white" asp-area="Admin" asp-controller="Products" asp-action="Index">
                            <i class="bi bi-box-seam me-2"></i> Products
                        </a>
                    </li>

                    <li class="nav-item mb-1">
                        <a class="nav-link text-white" asp-area="Admin" asp-controller="Categories" asp-action="Index">
                            <i class="bi bi-tags-fill me-2"></i> Categories
                        </a>
                    </li>

                    <li class="nav-item mb-1">
                        <a class="nav-link text-white" asp-area="Admin" asp-controller="Licenses" asp-action="Index">
                            <i class="bi bi-key-fill me-2"></i> Licenses
                        </a>
                    </li>

                    @* ViewComponent: Orders + Contact *@
                    @await Component.InvokeAsync("ContactAndOrderStats")
                </ul>
            </div>
        </nav>

        @* MAIN CONTENT *@
        <main class="main-content-area flex-grow-1 p-4">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-dark text-white text-center py-3 mt-auto">
        <div class="container">
            <p class="mb-0">&copy; @DateTime.Now.Year - SoftStore Admin. All rights reserved.</p>
        </div>
    </footer>

    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>
