@* Areas/Admin/Views/Shared/_Layout.cshtml *@
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Admin - SoftStore</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
</head>
<body>
    <nav class="navbar navbar-expand navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold" asp-area="Admin" asp-controller="Home" asp-action="Index">
                <i class="bi bi-speedometer2 me-2"></i> Admin SoftStore
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#sidebarMenu" aria-controls="sidebarMenu" aria-expanded="false" aria-label="Toggle sidebar">
                <span class="navbar-toggler-icon"></span>
            </button>
        </div>
    </nav>

    <div class="d-flex">
        <nav id="sidebarMenu" class="sidebar bg-dark collapse d-lg-block">
            <div class="sidebar-sticky px-2 pt-3">
                <ul class="nav flex-column">
                    <li class="nav-item mb-1">
                        <a class="nav-link text-white" asp-area="Admin" asp-controller="Home" asp-action="Index">
                            <i class="bi bi-house-door-fill me-2"></i> Dashboard
                        </a>
                    </li>
                    <li class="nav-item mb-1">
                        <a class="nav-link text-white" asp-area="Admin" asp-controller="Products" asp-action="Index">
                            <i class="bi bi-box-seam me-2"></i> Products
                        </a>
                    </li>
                    <li class="nav-item mb-1">
                        <a class="nav-link text-white" asp-area="Admin" asp-controller="Orders" asp-action="Index">
                            <i class="bi bi-bag-check-fill me-2"></i> Orders
                        </a>
                    </li>
                    <li class="nav-item mb-1">
                        <a class="nav-link text-white" asp-area="Admin" asp-controller="Categories" asp-action="Index">
                            <i class="bi bi-tags-fill me-2"></i> Categories
                        </a>
                    </li>
                    <li class="nav-item mb-1">
                        <a class="nav-link text-white" asp-area="Admin" asp-controller="Licenses" asp-action="Index">
                            <i class="bi bi-key-fill me-2"></i> Licenses
                        </a>
                    </li>
                    <li class="nav-item mt-3">
                        <form asp-area="Identity" asp-page="/Account/Logout" method="post" class="d-inline">
                            <button type="submit" class="btn btn-danger w-100">
                                <i class="bi bi-box-arrow-right me-2"></i> Đăng xuất
                            </button>
                        </form>
                    </li>
                </ul>
            </div>
        </nav>

        <main class="main-content-area flex-grow-1 p-4">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-dark text-white text-center py-3 mt-auto">
        <div class="container">
            <p class="mb-0">&copy; @DateTime.Now.Year - SoftStore Admin. All rights reserved.</p>
        </div>
    </footer>

    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
